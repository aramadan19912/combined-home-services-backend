# Azure Deployment Configuration
# Copy this file to .env.azure and fill in your values

# Azure Authentication (for OIDC)
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_CLIENT_ID=your-client-id

# Azure Resources (will be set after provisioning)
RESOURCE_GROUP=hsapp-rg
ACR_NAME=hsappacr12345
ACR_LOGIN_SERVER=hsappacr12345.azurecr.io
WEBAPP_API=hsapp-api-12345
WEBAPP_AUTH=hsapp-auth-12345
WEBAPP_FRONTEND=hsapp-frontend-12345

# Database Configuration
DATABASE_PROVIDER=Sqlite
# For PostgreSQL, use:
# DATABASE_PROVIDER=PostgreSql
# PG_CONN_STR=Server=yourserver.postgres.database.azure.com;Database=hsapp;Port=5432;User Id=youradmin;Password=yourpassword;Ssl Mode=Require;

# Application Settings
APP_CORS_ORIGINS=https://hsapp-frontend-12345.azurewebsites.net
AUTH_SELF_URL=https://hsapp-auth-12345.azurewebsites.net
AUTH_CLIENT_URL=https://hsapp-frontend-12345.azurewebsites.net
AUTH_CORS_ORIGINS=https://hsapp-frontend-12345.azurewebsites.net
APP_SELF_URL=https://hsapp-api-12345.azurewebsites.net

# Optional: Custom Domain
# CUSTOM_DOMAIN=yourdomain.com
# CUSTOM_API_DOMAIN=api.yourdomain.com
# CUSTOM_AUTH_DOMAIN=auth.yourdomain.com